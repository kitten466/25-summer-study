//첫번째 문제
let N = 5; 

for (let i = 1; i <= N; i++) {
    
    let spaces = '';
    for (let j = 1; j <= N - i; j++) {
        spaces = spaces + ' ';
    }

    
    let stars = '';
    for (let k = 1; k <= i; k++) {
        stars = stars + '*';
    }

  
    console.log(spaces + stars);
}

